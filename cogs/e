import discord
from discord.ext import commands
from typing import Union

class Blacklist(commands.Cog):
    def __init__(self, bot):
        self.bot = bot
    
    @commands.command(hidden=True)
    @commands.is_owner()
    async def blacklist(self, ctx, member : Union[discord.Member, int]):
    	if member.id in self.bot.owner_ids:
    		return    	
    	await self.bot.bl.upsert({"_id": member.id})
    	await ctx.embed(description=f"{member} has been blacklisted!")  	

def setup(bot):
    bot.add_cog(Blacklist(bot))